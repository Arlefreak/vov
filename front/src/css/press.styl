.press
    width 100%
    li
        display flex
        width 100%
        border-bottom 1px solid $black
        padding 20px 0 20px 0
        @media screen and (max-width: $max-width-mobile)
            display block
            width 100%
        &:firs-child
            padding 0 0 20px 0
        h3
            color $color3
        a
            color $black
            transition color 0.5s ease
            &:hover
                color $color3
        section
            margin 0
            display flex
            justify-content center
            flex-direction column
            text-align left
            &:first-child
                width 30%
                @media screen and (max-width: $max-width-mobile)
                    width 100%
            &:last-child
                width 70%
                @media screen and (max-width: $max-width-mobile)
                    width 100%
            @media screen and (max-width: $max-width-mobile)
                display block
            p
                display block
                margin 10px auto 10px
                width 100%

.contact
.stores
    width 100%
    padding 0 0 20px 0
    margin 0 0 20px 0
    overflow hidden
    div
        width 70%
        float left
        text-align left
        display block
        vertical-align top
        &:first-child
            width 30%
            @media screen and (max-width: $max-width-mobile)
                width 100%
        @media screen and (max-width: $max-width-mobile)
            width 100%
            float none
            clear both
    h2
        font-size 1.3em
    h3
        color $color3
        margin 10px 0 10px 0
    article
        margin 0px 5% 0 0
        width 45%
        display block
        float left
        min-height 170px
        @media screen and (max-width: $max-width-mobile)
            width 100%
            display block
            float left
            margin 0px 0px 30px 0
            min-height 0
    a
        color $color3
    p
        margin 0 auto 10px auto
.contact
    border-bottom 1px solid $black

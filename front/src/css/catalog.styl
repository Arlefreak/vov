.catalog
    width 100%
    li
        display block
        float left
        width 21.2%
        margin 0 2.5% 20px 2.5%
        text-align center
        &:nth-child(4n-7)
            margin 0 2.5% 20px 0
            @media screen and (max-width: $max-width-mobile)
                margin 0 2.5% 20px 2.5%
        &:nth-child(4n)
            margin 0 0 20px 2.5%
            @media screen and (max-width: $max-width-mobile)
                margin 0 2.5% 20px 2.5%
        @media screen and (max-width: $max-width-mobile)
            width 45%
        img
            display block
            width 100%
            height auto
            margin auto
        a
            color $color1
            text-decoration none
            transition color 0.5s ease
            &:hover
                color $color3
        div
            width 100%
            padding 0 0 100% 0
            background $gray1
            background-size cover
            background-position 50%, 50%
            transition background-image 0.5s ease
.main-image
    width 100%
    margin 0 auto 20px auto
    img
        width 100%
        max-width 100%
        display block
        margin auto
        &.category
            max-width 300px
.item-info
    border 1px solid $black
    border-right none
    border-left none
    box-sizing border-box
    padding 10px 0 10px 0
    display flex
    margin 0 0 20px 0
    @media screen and (max-width: $max-width-mobile)
        display block
    h2
    p
        width 50%
        margin 0
        display flex
        justify-content center
        flex-direction column
        @media screen and (max-width: $max-width-mobile)
            width 100%
            margin 20px auto 20px auto
.price
    color $color3
.parallax
    width 100%
    height 50vh
    display block
    background-size cover
    background-repeat no-repeat
    background-position-x center
    background-position-y 15vh
    background-attachment fixed
